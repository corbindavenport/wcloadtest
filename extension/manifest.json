{
  "manifest_version": 2,
  "name": "WC Power Test",
  "version": "1.0",
  "browser_action": {
    "default_icon": "skin/wcatter.png",
    "default_title": "20-hour Chrome battery test"
  },
  "icons": { "48": "skin/wcatter.png",
          "128": "skin/wcatter.png" },
  "permissions": [
    "http://*/", "https://*/", "tabs", "power"
  ],
  "background": {
    "persistent": true,
    "page": "bg.html"
  },
  "description": "Chrome-based battery test",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["ct.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
